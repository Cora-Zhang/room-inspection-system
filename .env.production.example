SMS_TEMPLATE_CODE=

# ============================================
# 前端配置
# ============================================
FRONTEND_PORT=5000
API_BASE_URL=http://your-domain.com/api
APP_TITLE=机房巡检系统
APP_VERSION=1.0.0

# SSO 配置（前端）
NEXT_PUBLIC_SSO_ENABLED=false
NEXT_PUBLIC_SSO_TYPE=local

# ============================================
# Nginx 配置
# ============================================
NGINX_HTTP_PORT=80
