# 服务器配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
FRONTEND_URL=http://localhost:5000

# 数据库配置 (使用PostgreSQL集成服务)
DATABASE_URL=postgresql://username:password@localhost:5432/inspection_db

# JWT配置
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 对象存储配置 (使用S3集成服务)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=inspection-files
S3_REGION=us-east-1

# SSO配置 - OAuth2/OIDC
SSO_TYPE=oauth2|saml|cas|local
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_CALLBACK_URL=http://localhost:3000/api/auth/callback/oauth2
OAUTH_AUTHORIZATION_URL=https://sso.company.com/oauth/authorize
OAUTH_TOKEN_URL=https://sso.company.com/oauth/token
OAUTH_USER_INFO_URL=https://sso.company.com/oauth/userinfo

# SSO配置 - SAML
SAML_ENTRY_POINT=https://sso.company.com/saml/sso
SAML_ISSUER=room-inspection-system
SAML_CALLBACK_URL=http://localhost:3000/api/auth/callback/saml
SAML_CERT=

# SSO配置 - CAS
CAS_BASE_URL=https://sso.company.com/cas
CAS_SERVICE_URL=http://localhost:3000/api/auth/callback/cas

# 数据同步配置
SYNC_ENABLED=false
SYNC_SCHEDULE=0 2 * * *
SYNC_ADAPTER=ldap|scim|custom
SYNC_INTERVAL_MINUTES=60

# LDAP配置
LDAP_URL=ldap://ldap.company.com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_SEARCH_FILTER=(objectClass=person)
LDAP_ORG_BASE=ou=groups,dc=company,dc=com

# SCIM配置
SCIM_BASE_URL=https://hr.company.com/scim/v2
SCIM_TOKEN=
SCIM_SYNC_ON_STARTUP=false

# 自定义HR系统API配置
CUSTOM_API_BASE_URL=https://hr.company.com/api
CUSTOM_API_TOKEN=
CUSTOM_API_USER_ENDPOINT=/users
CUSTOM_API_ORG_ENDPOINT=/organizations

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS配置
CORS_ORIGIN=http://localhost:5000

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx
