# ============================================
# 后端配置
# ============================================
BACKEND_PORT=8080

# JWT 配置（生产环境必须修改）
JWT_SECRET=your-production-secret-key-at-least-256-bits-long-for-hs256-algorithm

# 数据加密密钥（生产环境必须修改）
ENCRYPTION_SECRET_KEY=your-256-bit-encryption-key-change-me-in-production

# SSO 配置
SSO_ENABLED=false
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=
